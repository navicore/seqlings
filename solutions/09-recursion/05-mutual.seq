: is-odd? ( Int -- Bool ) drop false ;

: is-even? ( Int -- Bool )
    dup 0 i.= if
        drop true
    else
        1 i.- is-odd?
    then
;

: is-odd? ( Int -- Bool )
    dup 0 i.= if
        drop false
    else
        1 i.- is-even?
    then
;

: test-mutual ( -- )
    4 is-even?
    test.assert

    4 is-odd?
    not test.assert

    7 is-odd?
    test.assert

    7 is-even?
    not test.assert
;
