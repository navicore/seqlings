#       io.read-line
#   ;
#
#   : greet-user ( -- )
#       get-name
#       "Hello, " swap string.concat io.write-line
#   ;
#
# Your task: Design a simple prompt (conceptually).
# When done, delete the marker line below.

# I AM NOT DONE

: prompt-for ( String -- String )
    # Print the prompt string, then read input
    io.write-line
    # In real use: io.read-line
    "placeholder"   # For testing
;

: test-interactive ( -- )
    "Enter value: " prompt-for
    drop
    true test.assert
;
